@model Leave_Managements.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Request by @Model.RequestingEmployee.Firstname @Model.RequestingEmployee.Lastname </h1>

<div>
    
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateRequested)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateRequested)
        </dd>

    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@Model.Id">
        <i class="fa fa-check"></i>Approve
    </a>
    <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id">
        <i class="fa fa-remove"></i>Rejected
    </a>

    <a class="btn btn-outline-secondary" asp-action="Index">
    <i class="fa fa-arrow-left"></i>Back to List</a>
</div>
